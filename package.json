{
  "name": "delightloop-automation-playwright",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run clean:allure && playwright test",
    "test:headed": "npm run clean:allure && playwright test --headed",
    "test:ui": "npm run clean:allure && playwright test --ui",
    "test:debug": "npm run clean:allure && playwright test --debug",
    "test:report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "test:report:serve": "allure serve allure-results",
    "test:install": "playwright install",
    "clean:allure": "rimraf allure-results allure-report",
    "clean:allure:results": "rimraf allure-results",
    "clean:allure:report": "rimraf allure-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:smoke": "npm run clean:allure && playwright test --project=smoke",
    "test:smoke:headed": "npm run clean:allure && playwright test --project=smoke --headed",
    "test:regression": "npm run clean:allure && playwright test --project=regression",
    "test:regression:headed": "npm run clean:allure && playwright test --project=regression --headed",
    "test:api": "npm run clean:allure && playwright test --project=api",
    "test:api:headed": "npm run clean:allure && playwright test --project=api --headed",
    "test:performance": "npm run clean:allure && playwright test --project=performance",
    "test:performance:headed": "npm run clean:allure && playwright test --project=performance --headed",
    "test:cross-browser": "npm run clean:allure && playwright test --project=cross-browser-chrome --project=cross-browser-firefox --project=cross-browser-safari",
    "test:cross-browser:headed": "npm run clean:allure && playwright test --project=cross-browser-chrome --project=cross-browser-firefox --project=cross-browser-safari --headed",
    "test:auth": "npm run clean:allure && playwright test --grep @auth",
    "test:auth:headed": "npm run clean:allure && playwright test --grep @auth --headed",
    "test:critical": "npm run clean:allure && playwright test --grep @critical",
    "test:critical:headed": "npm run clean:allure && playwright test --grep @critical --headed",
    "test:positive": "npm run clean:allure && playwright test --grep @positive",
    "test:positive:headed": "npm run clean:allure && playwright test --grep @positive --headed",
    "test:negative": "npm run clean:allure && playwright test --grep @negative",
    "test:negative:headed": "npm run clean:allure && playwright test --grep @negative --headed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "allure-playwright": "^3.4.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "dotenv": "^17.2.3"
  }
}